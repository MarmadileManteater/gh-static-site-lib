{
  "include": ["src/*/*"],
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "target": "ES2021",
    "lib": ["es2021", "DOM", "WebWorker", "DOM.Iterable", "EsNext" ],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": "dist",
    "types": ["node"],
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
